<div class="submit-test">
<form action="/submitTest" method="POST">
  <h2>create your test</h2>
  <input type="hidden" name="numberOfQuestions" value="<%= numberOfQuestions %>">
  <input type="hidden" name="numberOfResults" value="<%= numberOfResults %>">
  <input type="text" name="name" placeholder="enter test name" required>
  <input type="text" name="description" placeholder="enter test description" required>
  <% for (let i = 0; i < numberOfQuestions; i++) { %>
    <div class="test-block">
      <h3>Question <%= i + 1 %></h3>
      <input type="text" name="questions[<%= i %>][question]" placeholder="enter question" required>
      <input type="text" name="questions[<%= i %>][answers][]" placeholder="enter answer" required>
      <input type="text" name="questions[<%= i %>][answers][]" placeholder="enter answer" required>
      <input type="text" name="questions[<%= i %>][answers][]" placeholder="enter answer" required>
    </div>
  <% } %>
  <% for (let i = 0; i < numberOfResults; i++) { %>
    <input type="text" name="results[]" placeholder="enter result <%= i + 1 %>" required>
  <% } %>
  <button type="submit">submit test</button>
</form>
</div>